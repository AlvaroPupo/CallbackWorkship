<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/callback_button_toast"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:text="Run toast method from activity"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="24dp" />

    <Button
        android:id="@+id/callback_change_texview_button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="change activity textview"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="159dp" />

    <Button
        android:id="@+id/callback_change_background_color_button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="change activity background color "
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/callback_remove_fragment_button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Remove fragment from activity"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="447dp" />
</android.support.constraint.ConstraintLayout>